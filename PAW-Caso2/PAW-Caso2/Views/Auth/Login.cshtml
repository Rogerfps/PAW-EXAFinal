@model PAW_Caso2.Models.Usuario

@{
    ViewData["Title"] = "Inicio de Sesión";
}

<h1>Inicio de Sesión</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label for="usuarioOrCorreo" class="control-label">Nombre de Usuario o Correo Electrónico</label>
                <input name="usuarioOrCorreo" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="contrasena" class="control-label">Contraseña</label>
                <input type="password" name="contrasena" class="form-control" required />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Iniciar Sesión" class="btn btn-primary" />
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger text-center mt-3">@ViewBag.Message</div>
        }
    </div>
</div>

<div>
    <a asp-action="Registro">Registrarse</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
