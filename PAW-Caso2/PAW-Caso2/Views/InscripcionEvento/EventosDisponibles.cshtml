@model List<PAW_Caso2.Models.Evento>
@{
    ViewData["Title"] = "Eventos Disponibles";
    int usuarioId = 1; //Aqui se remplaza el rol segun lo al que se lo quiera mostrar
}

<h2>Eventos Disponibles</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Duración</th>
            <th>Ubicación</th>
            <th>Cupo Máximo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evento in Model)
        {
            <tr>
                <td>@evento.Titulo</td>
                <td>@evento.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@evento.Hora</td>
                <td>@evento.Duracion min</td>
                <td>@evento.Ubicacion</td>
                <td>@evento.CupoMaximo</td>
                <td>
                    <form asp-action="Inscribirse" method="post">
                        <input type="hidden" name="eventoId" value="@evento.Id" />
                        <input type="hidden" name="usuarioId" value="@usuarioId" />
                        <button type="submit" class="btn btn-primary">Inscribirme</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
